</head>
<script>
    function trimInput() {
        $(".input").each(function(index, val){
            const inputValue =  $(this).val().trim();
            const name = $(this).attr('name');
            $(this).val(inputValue);
        });
    }
</script>
<body>
    <nav>
        <div class="nav__header">
            <div class="logo nav__logo">
                <a href="admin_page">SVN8<span>TEAM</span></a>
            </div>
            <div class="nav__menu__btn" id="menu-btn">
                <span><i class="ri-menu-line"></i></span>
            </div>
        </div>

        <ul class="nav__links" id="nav-links">
            <li><a href="admin_vehicle">Vehicle</a></li>
            <li><a href="admin_driver">Driver</a></li>
            <li><a href="admin_trip">Trip</a></li>
            <li><a href="admin_report">Team report</a></li>
        </ul>

        <a href="..">
            <div class="explore__btn">
                <button class="btn">
                    Log Out <span><i class="ri-arrow-right-line"></i></span>
                </button>
            </div>
        </a>
    </nav>
    <header class="section__container header__container" id="home">
        <div class="header__image">
            <img src="assets/landing_page/img/header.png" alt="header" />
        </div>
        <div class="header__content">
            <h1>Driver Monitoring</h1>
        </div>
    </header>
    <section class="section__container special__container" id="special">
        <h2 class="section__header">Add a new driver:</h2>
    </section>

    <div class="container">
        <form action="./create-new-driver" method="post">
            <div class="formfirst">
                <div class="details">
                    <div class="fields">
                        <div class="input-field">
                            <label>Full name:</label>
                            <input class="input" type="text" placeholder="Enter Full name" name="name" required>
                        </div>
                        <div class="input-field">
                            <label>Address:</label>
                            <input class="input" type="text" placeholder="Enter Address" name="address" required>
                        </div>
                        <div class="input-field">
                            <label>Phone number:</label>
                            <input class="input" type="text" placeholder="Enter Phone number" name="phoneNumber" required>
                        </div>
                        <div class="input-field">
                            <label>Year of experience</label>
                            <input class="input" type="text" placeholder="Enter Year of experience" name="yearOfExperience" required>
                        </div>
                        <div class="input-field">
                            <label>Driver license number:</label>
                            <input class="input" type="text" placeholder="Enter Driver license number" name="drivingLicenseNumber" required>
                        </div>
                        <div class="input-field">
                            <label>Driver license class:</label>
                            <input class="input" type="text" placeholder="Driver license class" name="drivingLicenseClass" required>
                        </div>
                        <div class="input-field">
                            <label>Identity card number:</label>
                            <input class="input" type="text" placeholder="Identity card number" name="identityCardNumber" required>
                        </div>
                    </div>
                    <button class="nextBtn" type="submit" onclick="trimInput()">
                        <span class="btnNext">Save</span>
                        <i class="uil uil-navigator"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    
