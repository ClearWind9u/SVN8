</head>
<script>
    function trimInput() {
        let isNum = true;
        $(".input").each(function(index, val){
            const inputValue =  $(this).val().trim();
            const name = $(this).attr('name');
            $(this).val(inputValue);
            if (name == "phoneNumber" || name == "yearOfExperience" || name == "drivingLicenseNumber" || name == "identityCardNumber"){
                isNum = isNum && !isNaN($(this).val());
            }
        });
        if (!isNum) {
            $(".input").each(function(index, val){
                $(this).val("");
            });
            alert("You must enter the right format of the input!");
        }
    }
</script>
